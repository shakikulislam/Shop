@model Shop.Models.Customer
@{
    ViewBag.Title = "Update Customer Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Styles
{
    <style>
        #HeadTitle {
            font-size: 28px;
            margin: -20px 0px 40px 0px;
            color: red;
            text-align: center;
        }

        #table {
            margin: 0 auto;
            border: 3px solid;
            border-color: green;
            background-color: white;
        }

        #message {
            text-align: center;
        }
    </style>
}



    <p id="HeadTitle">Customer Update Form</p>
    <div id="message">
        @if (ViewBag.SMsg != null)
        {
            <p style="color: green; font-weight: bolder">@(ViewBag.SMsg)</p>
        }
        else if (ViewBag.FMsg != null)
        {
            <p style="color: red; font-weight: bolder">@(ViewBag.FMsg)</p>
        }
    </div>
    <form method="POST">
        <table id="table">
            @if (Model != null)
            {

                <tr>
                    <td>Customer Id: </td>
                    <td>@Html.TextBoxFor(c=>c.CustomerId)</td>
                </tr>
                <tr>
                    <td>Name: </td>
                    <td>@Html.TextBoxFor(c=>c.Name)</td>
                </tr>
            
            }
            else
            {

                <tr>
                    <td>Customer Id: </td>
                    <td><input type="text" name="CustomerId" /></td>
                </tr>
                <tr>
                    <td>Name: </td>
                    <td><input type="text" name="Name" /></td>
                </tr>
                
            }
            <tr>
                <td>Code: </td>
                <td><input type="text" name="Code" /></td>
            </tr>
            <tr>
                <td>Address: </td>
                <td><input type="text" name="Address" /></td>
            </tr>
            <tr>
                <td>Email: </td>
                <td><input type="text" name="Email" /></td>
            </tr>
            <tr>
                <td>Contact: </td>
                <td><input type="text" name="Contact" /></td>
            </tr>
            <tr>
                <td>Age: </td>
                <td><input type="text" name="Age" /></td>
            </tr>
            <tr>
                <td>Loyality Point: </td>
                <td><input type="text" name="LoyalityPoint" /></td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Update" style="width: 90px; height: 40px;" /></td>
            </tr>
        </table>
    </form>